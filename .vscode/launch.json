{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5173/",
            "webRoot": "${workspaceFolder}/apps/fe"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch BE",
            "args": ["${workspaceFolder}/apps/be/src/main.ts"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
